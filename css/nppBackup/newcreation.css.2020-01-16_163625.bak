:root {
    --color-black:black;
    --color-dark-green:#09716a;
    --color-light-green:#00b8bc;
    --color-dark-brown:#654014;
    --color-light-brown:#ae6b25;
    --color-tan:#e1a331;
}

/* nav */

nav {
  display: block;
}
.bar {
	position: fixed;
	right: 0;
	left: 0;
	z-index: 10;
	height: 64px;
	padding-top:0px;
	padding-right: 0px;
	padding-left: 0px;
	background-color :#3ebcce;
	border-bottom: 1px solid #3ebcce;
	-webkit-backface-visibility: hidden;
			backface-visibility: hidden;
}
.bar-nav {
	top: 0;
}
.bar-nav ~ .content {
	padding-top: 0px;
}

div.container{
	width:100%;
	display:block;
}
.nav-front{
	background-color:var(--color-dark-green);
}
.nav-back{
	background-color:var(--color-light-brown);
}
.nav-path{
	background-color:var(--color-dark-brown);
}
.nav-bible{
	background-color:var(--color-dark-green);
}
img.nav-bible,
img.nav-back,
img.nav-front,
img.nav-path
{
	width:100%;
	max-width:535px;
}
img.nav-share{
	width:100%;
	max-width:65px;
}
/* Clear floats after image containers */
.row::after {
	content: "";
	clear: both;
	display: table;
  }
.nav-column-main{
	float: left;
  	width: 87%;

}
.nav-column-share{
	float: left;
  	width: 13%;
}
.ios-hidden{
	display:none;
}
.ios-visible{
	display:block;
	
}
img.ios-visible{
	width:100%;
}

table.ios-visible,
div.ios-visible{
	background-color:var(--color-dark-green);
	padding-left:10px;
	padding-right:10px;
	padding-top:20px;
	padding-bottom:20px;
}

